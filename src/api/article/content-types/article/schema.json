{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "subtitle": {
      "type": "text",
      "maxLength": 80,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "short_description": {
      "type": "text",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "medias": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "topics": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::topic.topic",
      "mappedBy": "articles"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "content_classification": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::content-classification.content-classification",
      "inversedBy": "articles"
    },
    "related_articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "inversedBy": "connected_articles"
    },
    "connected_articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "inversedBy": "related_articles"
    },
    "time_to_read": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string"
    },
    "category_groups": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category-group.category-group",
      "inversedBy": "articles"
    },
    "page_template": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::page-template.page-template",
      "inversedBy": "articles"
    },
    "sections": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "dynamiczone",
      "components": [
        "shared.accordion",
        "shared.contextual-message",
        "shared.image",
        "shared.table",
        "shared.title",
        "shared.video",
        "shared.rich-text",
        "shared.label",
        "shared.link",
        "shared.modal",
        "shared.banner",
        "shared.article-section-title",
        "shared.product-card",
        "shared.subtitle"
      ]
    }
  }
}
